{% extends 'adminlayout.html.twig' %}

{% block title %} - Gestion des événements {% endblock %}


{% block content %}
    <section class="ftco-section mt-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="history">
                    <h3 class="title3 pb-4">Gestion des evenements</h3>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Numéro</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for event in events %}
                            <tr>
                                <th scope="row">{{ event.id }}</th>
                                <td>{{ event.title }}</td>
                                <td>{{ event.event_date }}</td>
                                <td><a class="btn btn-warning" href="/Admin/editevent/{{ event.id }}" role="button">Modifier</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}