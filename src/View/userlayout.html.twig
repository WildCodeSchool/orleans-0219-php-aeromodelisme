{% block footer %}
    <footer class="footer bg-danger pt-5 pb-3">
        <div class="footer-container container-fluid">
            <div class="form row justify-content-between pr-4 pl-4 pb-4">
                <address class="text-center info col-12 col-xl-2">
                    <h5 class="align-middle">Nos locaux :</h5>
                    Mairie de Saint Jean de la Ruelle<br>
                    71 Rue Charles Beauhaire<br> 45140 Saint-Jean-de-la-Ruelle <br><br>
                    <h5>Notre terrain :</h5>
                    Rue des Queues de Forêt<br>
                    45140 Ingré<br><br>
                    <h5>Le gymnase :</h5>
                    Gymnase des 3 fontaines<br>
                    Centre Commercial Auchan<br>
                    Saint Jean de la Ruelle
                </address>

                <div class="col-12 col-xl-4 embed-responsive embed-responsive-4by3">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7563.623850719586!2d1.7710148156885803!3d47.91423451652312!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4f2022a3a602b%3A0x1347f5b19f92128e!2sTerrain+Aero-modelisme+-+RCMCO!5e0!3m2!1sfr!2sfr!4v1555497893464!5m2!1sfr!2sfr"
                            width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <form class="col-12 col-xl-4">
                    <div class="form-row">
                        <div id="form-footer" class="form-group col-md-6">
                            <label for="inputName4">Nom</label>
                            <input type="text" class="form-control" id="inputName4" name="lastname" required
                                   placeholder="Jean">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputFirstname4">Prénom</label>
                            <input type="text" class="form-control" id="inputFirstname4" name="firstname" required
                                   placeholder="Dupont">
                        </div>
                    </div>
                    <div class="col-12 m-0 p-0">
                        <label for="inlineFormInputGroup">Email</label>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="email" class="form-control" id="inlineFormInputGroup" name="email" required
                                   placeholder="Jean.dupont@email.com">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputObject">Objet</label>
                        <input type="text" class="form-control" id="inputObject" name="object" required
                               placeholder="L'objet de votre message">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Message</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" required></textarea>
                    </div>
                    <button type="submit" class="footer-btn btn-danger">Envoyer</button>
                </form>
            </div>
            <hr class="bg-grey mt-2">
            <div class="row justify-content-center">
                <div class="signature col-12 col-md-8">
                    <p> The guns n' wilders : <a href="#">Jean-Christophe Roger</a> - <a href="#">Nawal Zakarya</a> - <a
                                href="#">Vinvent Ostyn</a> - <a href="#">Manuel Leger</a> - <a href="#">Emilie Serre</a>
                        | <a href="#">Mentions légales</a></p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}
