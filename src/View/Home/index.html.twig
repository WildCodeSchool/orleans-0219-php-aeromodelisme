    </section>

    <section class="ftco-section">
        <div class="container">
            <div class="row">

                <div class="col-md-3 text-center heading">
                    <div class="circle circle2">
                        <i class="fas fa-fighter-jet mt-4"></i>
                    </div>
                    <h3 class="title_act">Avion</h3>
                </div>
                <div class="col-md-3 text-center heading">
                    <div class="circle circle2">
                        <i class="fas fa-paper-plane mt-4"></i>
                    </div>
                    <h3 class="title_act">Planeur</h3>
                </div>
                <div class="col-md-3 text-center heading">
                    <div class="circle circle2">
                        <i class="fas fa-helicopter mt-4"></i>
                    </div>
                    <h3 class="title_act">Helicoptere</h3>
                </div>
                <div class="col-md-3 text-center heading">
                    <div class="circle circle2">
                        <i class="fas fa-home mt-4"></i>
                    </div>
                    <h3 class="title_act">Indoor</h3>
                </div>
            </div>
        </div>
    </section>    
    
   <section class="ftco-section bg-grey">
      <div class="container">
         <div class="events">
            <div class="row justify-content-around">
                {% for event in events %}
                   <div class="col-12 col-lg-5 staff">
                        <div class="card">
                            <img class="card-img-top" src="{{ event.picture }}" alt="affiche evenement">
                               <div class="card-body">
                                  <p>{{ event.date }}</p>
                                  <h4 class="card-title">{{ event.title }}</h4>
                                  <p class="card-text">{{ event.description }}</p>
                                </div>
                          </div>
                     </div>
                  {% endfor %}
              </div>
           </div>
        </div>
     </section>      
     <section class="ftco-section bg-grey text-center ">
        <h3 class="title3 pb-4">La video des 40ans !</h3>
        <div class="container embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" width="560" height="315"
                    src="https://www.youtube.com/embed/TZVEIXiZAV4"
                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
        </div>
     </section>
